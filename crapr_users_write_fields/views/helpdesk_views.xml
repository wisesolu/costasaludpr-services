<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited the form view for the helpdesk ticket-->
    <record id="helpdesk_ticket_view_form_inherit_crapr" model="ir.ui.view">
        <field name='name'>helpdesk.ticket.view.form.inherit.crapr</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <field name='team_id' position="before">
                <field name="custom_write_uid"/>
                <field name="custom_write_date"/>
            </field>
        </field>
    </record>

    <!--Action for helpdesk model to update the empty custom write fields.-->
    <record id="fill_custom_write_fields_action_helpdesk" model="ir.actions.server">
        <field name="name">Fill Custom Write Fields</field>
        <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
        <field name="binding_model_id" ref="helpdesk.model_helpdesk_ticket"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_fill_custom_write_fields_helpdesk_ticket()</field>
    </record>
</odoo>
