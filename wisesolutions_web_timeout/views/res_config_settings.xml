<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.cfs</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="47"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(base.action_res_users)d']" position="after">
                    <div class="content-group">
                        <div class="mt16 row">
                            <label for="next_timeout" string="Next Timeout (hours)" class="col-3 col-lg-3 o_light_label"/>
                            <field name="next_timeout" widget="float_time" groups="base.group_system" class="oe_inline" required="1"/>
                        </div>
                        <div class="mt16 row">
                            <label for="timeout_msg" string="Timeout Message" class="col-3 col-lg-3 o_light_label"/>
                            <field name="timeout_msg" groups="base.group_system" class="oe_inline" required="1"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>